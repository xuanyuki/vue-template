{
  "$schema": "https://json.schemastore.org/prettierrc",
  "tailwindStylesheet": "./src/assets/styles/tailwindecss.css",
  "plugins": ["prettier-plugin-tailwindcss"],
  "printWidth": 80,
  "tabWidth": 2,
  "singleQuote": true,
  "semi": false,
  "trailingComma": "all",
  "bracketSameLine": true,
  "bracketSpacing": true,
  "singleAttributePerLine": true,
  "proseWrap": "never",
  "endOfLine": "auto",
  "htmlWhitespaceSensitivity": "strict",
  "vueIndentScriptAndStyle": true,
  "overrides": [
    {
      "files": ".lintstagedrc",
      "options": {
        "parser": "json"
      }
    }
  ]
}
